<%= form_for @restaurant do |f| %>

    <p><%= f.label 'name', 'Restaurant Name' %></p>
    <p><%= f.text_field 'name' %></p>

    <p><%= f.label 'description', 'Description' %></p>
    <p><%= f.text_area 'description' %></p>

    <p><%= f.label 'cuisine', 'Cuisine' %></p>
    <p><%= f.text_area 'cuisine' %></p>

    <p><%= f.label 'capacity', 'Seats available for reservation' %></p>
    <p><%= f.text_field 'capacity' %></p>

    <p><%= f.label 'location', 'Neighborhood' %></p>
    <p><%= f.text_field 'location' %></p>

    <p><%= f.label 'address', 'Full Address' %></p>
    <p><%= f.text_area 'address' %></p>

    <p><%= f.label 'display_image_url', 'Image URL' %></p>
    <p><%= f.text_field 'display_image_url' %></p>

    <p><%= f.submit 'Add Restaurant' %></p>

<% end %>