


<h1 class="registration_logo">Seat Yourself</h1>

    <div class="registration_form">

    <%= form_tag '/sessions' do %>

        <p><%= label_tag 'name', 'Email' %>
        <%= text_field_tag 'name' %></p>

        <p><%= label_tag 'password', 'Password' %>
        <%= password_field_tag 'password' %></p>

        <p><%= submit_tag 'Log in' %></p>

    <% end %>

    </div>

